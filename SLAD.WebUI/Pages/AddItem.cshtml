@page
@model AddItemModel
@{
    ViewData["Title"] = "Add Item to List";
}

<form method="POST">
    <div class="form-group">
        <h3>Item Name</h3>
        <input type="text" class="form-control" asp-for="ThisItem.ItemName"/>
    </div>
    <div class="form-group">
        <h3>Item Quantity</h3>
        <input type="number" class="form-control" asp-for="ThisItem.ItemQty"/>
    </div>
    <button type="submit" class="btn btn-dark">Add Item</button>
</form>